<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.SettingsBase" parent="@android:style/Theme.DeviceDefault.Settings" />

    <!-- Custom SeekBar Style -->
    <style name="CustomSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <!-- Customize thumb size -->
        <item name="android:thumb">@drawable/custom_thumb_drawable</item>
        <!-- Customize track height -->
        <item name="android:track">@drawable/custom_track_drawable</item>
    </style>

</resources>
